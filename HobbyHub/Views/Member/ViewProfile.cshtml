@model HobbyHubSystem.Web.ViewModels.Member.ViewProfileViewModel

@{
    ViewData["Title"] = "View Profile";
}

<h2>@ViewData["Title"]</h2>

<div class="profile-image">
    <img src="@Model.ImageUrl" alt="Profile Image" class="profile-image" style="max-width: 200px; max-height: 200px;">
</div>

<div class="profile-info">
    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Registered On:</strong> @Model.RegisteredOn</p>
</div>
