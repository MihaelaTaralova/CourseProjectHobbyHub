@model HobbyHubSystem.Web.ViewModels.Article.DeleteArticleViewModel

<h2>Delete Article</h2>

<p>Are you sure you want to delete the article "<strong>@Model.Title</strong>"?</p>

<form asp-controller="Article" asp-action="DeleteArticleConfirmed" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Article" asp-action="All" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}