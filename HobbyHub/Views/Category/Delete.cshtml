@model HobbyHubSystem.Web.ViewModels.Category.DeleteCategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<div>
    <h3>Are you sure you want to delete this category?</h3>
    <div>
        <h4>Category Name:</h4>
        <p>@Model.Name</p>
    </div>
    <div>
        <h4>Category Image:</h4>
        <img src="@Model.ImageUrl" alt="Category Image" />
    </div>
    

    <form asp-controller="Category" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="All" class="btn btn-secondary">Cancel</a>
    </form>
</div>
