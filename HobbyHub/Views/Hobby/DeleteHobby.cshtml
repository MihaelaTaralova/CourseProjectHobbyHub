@model HobbyHubSystem.Web.ViewModels.Hobby.DeleteHobbyViewModel
@using HobbyHubSystem.Web.ViewModels.Category;

@{
    ViewData["Title"] = "Delete Hobby";
}

<h2>Delete Hobby</h2>

<div>
    <h3>Are you sure you want to delete this category?</h3>
    <div>
        <h4>Category Name:</h4>
        <p>@Model.Name</p>
    </div>
    <div>
        <h4>Category Image:</h4>
        <img src="@Model.ImageUrl" alt="Hobby Image" />
    </div>


    <form asp-controller="Hobby" asp-action="DeleteHobby" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Category" asp-action="All" class="btn btn-secondary">Cancel</a>
    </form>
</div>
