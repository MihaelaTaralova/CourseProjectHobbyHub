@using HobbyHubSystem.Web.ViewModels.Hobby;
@model AddHobbyViewModel

@{
    ViewData["Title"] = "Add Hobby";
}

<h2>Add Hobby</h2>

<form asp-controller="Hobby" asp-action="AddHobby" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />

    <button type="submit" class="btn btn-primary">Add Hobby</button>
</form>

<a href="@Url.Action("OpenCategory", "Category", new { id = Model.CategoryId })">Back to Category</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}